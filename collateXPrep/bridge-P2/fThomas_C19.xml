            <seg xml:id="C19_app30-#fThomas_end"/>
               <seg xml:id="C19_app30-#fThomas_start"/>Empires. <seg xml:id="C19_app30-#fThomas_end"/>
            
               <seg type="invariant-MissingWit" xml:id="C19_app31-#fThomas_start"/>
